<div class="container bg-black d-grid ">
<div class="row">
    <% array = (1 .. 30).to_a %>
    <% array.each_slice(3) do |cards| %>
      <div class="row">
        <% cards.each do |card| %>
          <div class="col-md-4 mb-3">
            <%= render 'shared/card', card: card %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
