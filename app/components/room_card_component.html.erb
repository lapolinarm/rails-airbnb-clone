<%= link_to @room, style: "text-decoration: none;" do %>
  <div class="card" id="card_bottom_margin">
    <img src="https://res.cloudinary.com/roldan-cloudinary/image/upload/v1725566367/airbnbimage_2_sd8f0s.webp" alt="img">
    <div class="card-body">
      <div class="d-flex justify-content-between">
        <div id="card-name">
          <h5 class="mb-3"><%= @room.name %></h5>
        </div>
        <div class="d-flex justify-content-between" id="rating">
          <i class="fa-solid fa-star"></i>
          <h5 class="mb-3"><%= rand(1.0..5.0).round(1) %></h5>
        </div>
      </div>
      <h6>Quedate con: <%= @room.user.first_name + " " + @room.user.last_name %></h6>
      <h6 class="mt-3">Direcci√≥n: <%= @room.address %></h6>
      <h5 class="mt-3">S/ <%= @room.price %> noche</h5>
    </div>
  </div>
<% end %>
